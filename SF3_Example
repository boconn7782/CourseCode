/*
  Blink - Button
  
  Switching a LED on and off every second or when the button is pressed.
  
*/

// constants won't change. They're used here to 
// set pin numbers:
const int buttonPin = 2;     // the number of the pushbutton pin
const int ledPin =  13;      // the number of the LED pin

// variables will change:
int buttonState = 0;         // variable for reading the pushbutton status

void setup() {                  // the setup() method is executed only once
  // initialize the LED pin as a digital output:
  pinMode(ledPin, OUTPUT);      
  // initialize the pushbutton pin as a digital input:
  pinMode(buttonPin, INPUT); 
}

void loop() {                   // the loop() method is repeated
	// The Blink Example
  digitalWrite(ledPin, HIGH);      // switching on the led 
  delay(1000);                  // stopping the program for 1000 milliseconds
  digitalWrite(ledPin, LOW);       // switching off the led 
  delay(1000);                  // stopping the program for 1000 milliseconds

  // The Button Example
  // check if the pushbutton is pressed.
  // if it is, the buttonState is HIGH:
  if (buttonState == LOW) {     
    // turn LED on:    
    digitalWrite(ledPin, HIGH);  
  } 
  else {
    // turn LED off:
    digitalWrite(ledPin, LOW); 
  }
}
